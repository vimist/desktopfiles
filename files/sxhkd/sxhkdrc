#
# General hotkeys
#

# Terminal emulator
super + Return
	cd; alacritty

# Program launcher
super + space
	"$HOME/.config/dmenu/launcher.sh"

# Reload sxhkd and bspwm configuration files
super + Escape
	bspc wm --restart; \
	dunstify 'Restarted' 'Window manager restarted'

# Pass autotype
ctrl + alt + a
	"$HOME/bin/window-autotype"

# Screenshot
@Print
	"$HOME/bin/screenshot"

# Calculator
super + c
	alacritty --title Calculator --command python3 -iqc 'from math import *'

# Colour picker
super + p
	"$HOME/bin/colour-picker"

# Mouse control
#KP_Up
#	xdotool mousemove_relative -- 0 -1
#
#KP_Down
#	xdotool mousemove_relative -- 0 1
#
#KP_Left
#	xdotool mousemove_relative -- -1 0
#
#KP_Right
#	xdotool mousemove_relative -- 1 0
#
#KP_Begin
#	xdotool click 1

#
# bspwm hotkeys
#

# Close window
super + w
	bspc node --close

alt + F4
	bspc node --close

# Toggle monocle layout
super + m
	bspc desktop --layout next

# Toggle the window fullscreen
super + a
	bspc node --state ~fullscreen

# Toggle the window sticky
super + s
	bspc node --flag ~sticky

# Toggle the window floating
super + f
	bspc node --state ~floating

# Focus the node in the given direction
super + {h,j,k,l}
	bspc node --focus {west,south,north,east}

# Swap the node in the given direction
super + shift + {h,j,k,l}
	bspc node --swap {west,south,north,east}

# Focus the next node
alt + Tab
	bspc node --focus next.local

# Focus the given desktop
super + {1-9,0}
	bspc desktop --focus '{1-9,0}'

# Send to the given desktop
super + shift + {1-9,0}
	bspc node --to-desktop '{1-9,0}'

